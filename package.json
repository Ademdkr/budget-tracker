{
  "name": "budget-tracker",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "setup": "node ./tools/setup.mjs",
    "dev": "concurrently -n FE,BE -c blue,magenta \"pnpm --filter @budget-tracker/frontend dev\" \"pnpm --filter @budget-tracker/backend start:dev\"",
    "dev:web": "pnpm --filter @budget-tracker/frontend dev",
    "dev:api": "pnpm --filter @budget-tracker/backend start:dev",
    "build": "pnpm -r run build",
    "build:web": "pnpm --filter @budget-tracker/frontend build",
    "build:api": "pnpm --filter @budget-tracker/backend build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "start": "pnpm --filter @budget-tracker/backend start",
    "format": "prettier --write \"**/*.{ts,js,tsx,jsx,json,md,scss,css,html}\"",
    "db:up": "docker compose up -d",
    "db:logs": "docker compose logs -f db",
    "db:down": "docker compose down",
    "db:studio": "pnpm --filter @budget-tracker/backend exec prisma studio",
    "gen:prisma": "pnpm --filter @budget-tracker/backend exec prisma generate",
    "postinstall": "node -e \"if(process.env.SKIP_POSTINSTALL!=='true'){require('child_process').execSync('pnpm --filter @budget-tracker/backend exec prisma generate',{stdio:'inherit'})} else {console.log('Skipping postinstall (SKIP_POSTINSTALL=true)')}\""
  },
  "lint-staged": {
    "apps/**/{src,prisma}/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "**/*.{json,md,scss,css,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^20.4.0",
    "@angular-eslint/eslint-plugin-template": "^20.4.0",
    "@angular-eslint/template-parser": "^20.4.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.19.22",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.0.1",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.45.0"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@neondatabase/serverless": "^1.0.2",
    "@nestjs/swagger": "^11.2.1",
    "@prisma/adapter-neon": "^6.18.0",
    "@prisma/client": "^6.18.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "hono": "^4.10.2",
    "joi": "^18.0.1",
    "swagger-ui-express": "^5.0.1"
  }
}
